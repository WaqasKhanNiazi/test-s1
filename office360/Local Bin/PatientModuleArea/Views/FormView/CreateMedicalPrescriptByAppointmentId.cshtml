
@{
    ViewBag.Title = "Create Medical Prescription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    /* Add your custom CSS styles here */
    .card {
        margin-top: 20px;
    }

    .form-row {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }
</style>

<form>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="container container-fluid" style="text-align:center">
                    <img src="~/THEME/assets/img/CompanyLogo.png" class="inv-logo" alt="A Group of Ring-tailed Lemurs">
                    <br />
                    <span class="LKC_CompanyName"></span>
                    <br />
                    <span class="LKC_AddressLine1"></span>
                    <br />
                    <span class="LKC_EmailLabel"></span>
                    <br />
                    <span class="LKC_ContactLabel"></span>
                </div>
                <!-- Doctor Details -->
                <div class="col-md-12 col-sm-6 m-b-10" style="margin-top:8px">
                    <div class="form-row alert alert-success" style="border:inset;">
                        <h6 class="col-md-12" style="font-size:20px;font-weight:bolder">Doctor Details</h6>

                        <div class="col-md-6" style="text-align:left">
                            <span class="DoctorNameLabel">Doctor Name:</span>
                            <span class="DoctorName"></span>
                        </div>
                        <div class="col-md-6" style="text-align:right">
                            <span class="DoctorCodeLabel">Doctor Code:</span>
                            <span class="DoctorCode">Doctor Code: EID-D-110523-007</span>
                        </div>
                        <div class="col-md-6" style="text-align:left">
                            <span class="ContactNumberLabel">Contact Number:</span>
                            <span class="ContactNumber"></span>
                        </div>
                        <div class="col-md-6" style="text-align:right">

                            <span class="EmailAddressLabel">Email Address:</span>
                            <span class="EmailAddress"></span>
                        </div>
                        <div class="col-md-6" style="text-align:left">
                            <span class="PA_DepartmentNameLabel">Department Name:</span>
                            <span class="PA_DepartmentName"></span>
                        </div>
                    </div>
                </div>
                <!-- Appointment Details -->
                <div class="col-md-12 col-sm-4 m-b-10" style="margin-top:3px">
                    <div class="form-row alert alert-success" style="border:inset;">
                        <h6 class="col-md-12" style="font-size:20px;font-weight:bolder">Appointment Details:</h6>
                        <div class="col-md-6" style="text-align:left">
                            <span class="PA_AppointmentCodeLabel">Appointment Code:</span>
                            <span class="PA_AppointmentCode"></span>
                        </div>
                        <div class="col-md-6" style="text-align:right">
                            <span class="PA_DateofAppointmentLabel">Date of Appointment:</span>
                            <span class="PA_DateofAppointment"></span>
                        </div>
                        <div class="col-md-6" style="text-align:left">
                            <span class="PA_TimeofAppointmentLabel">Time of Appointment:</span>
                            <span class="PA_TimeofAppointment"></span>
                        </div>
                    </div>
                </div>

                <!-- Patient Details -->
                <div class="col-md-12 col-sm-6 m-b-10" style="margin-top:3px">
                    <div class="form-row alert alert-success" style="border:inset;">
                        <h6 class="col-md-12" style="font-size:20px;font-weight:bolder">Patient Details</h6>
                        <div class="col-md-6" style="text-align:left">
                            <span class="P_CodeLabel">Code :</span>
                            <span class="P_Code"></span>
                        </div>
                        <div class="col-md-6" style="text-align: right">
                            <span class="P_NameLabel">Name :</span>
                            <span class="P_Name"></span>
                        </div>
                        <div class="col-md-6" style="text-align: left ">
                            <span class="P_AgeLabel">Age : </span>
                            <span class="P_Age"></span>
                        </div>
                        <div class="col-md-6" style="text-align: right">
                            <span class="P_GenderLabel">Gender : </span>
                            <span class="P_Gender"></span>
                        </div>
                        <div class="col-md-6" style="text-align: left ">
                            <span class="P_PhoneLabel">Contact : </span>
                            <span class="P_Phone"></span>
                        </div>
                        <div class="col-md-6" style="text-align: right">
                            <span class="P_EmailLabel">Email : </span>
                            <span class="P_Email"></span>
                        </div>
                        <div class="col-md-6" style="text-align: left">
                            <span class="P_CityNameLabel">City : </span>
                            <span class="P_CityName"></span>
                        </div>
                        <div class="col-md-6" style="text-align: right; margin-right:0px">
                            <span class="P_AddressLabel">Address : </span>
                            <span class="P_Address"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<form>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="DropDownPrescriptType">Prescript Type</label>
            <select class=" form-control purple" data-placeholder="Select Prescription Advice Type" data-dropdown-css-class="select2-purple" id="DropDownPrescriptType" ng-model="PrescriptType">
                <option value="Select Prescription Advice Type">Select Prescription Advice Type</option>
                <option value="Medicine">Medicines</option>
                <option value="Diagnosis Test">Diagnosis Test</option>
            </select>
        </div>
        <div style="color:red"></div>
        <div class="form-group col-md-4">
            <label ng-bind="PrescriptType +' ' +'Name'"></label>
            <input type="text" class="form-control" id="TextBoxMedicineTestName" disabled placeholder="Enter Name of Test or Medicine">
        </div>
        <div class="form-group col-md-4">
            <label for="TextBoxMedicationPeriod">Days For Medication Course</label>
            <input type="text" class="form-control input-sm" id="TextBoxMedicationPeriod" disabled placeholder="Enter Days For Medication Course Here!">
        </div>
        <div class="form-group col-md-4">
            <label for="TextBoxRecomendedDosage">Recommended Dosage</label>
            <input type="text" class="form-control input-sm" id="TextBoxRecomendedDosage" placeholder="Enter Recommended Dosage Here!" disabled>
        </div>
        <div class="col-sm-1 form-group" style="margin-top:30px">
            <input type="submit" id="AppendMedicalPrescription" value="+" class="form-control btn btn-danger" />
        </div>
    </div>

</form>

<div class="table-responsive col-md-12 col-sm-6 m-b-10">
    <table class="table table-striped table-sm table-bordered order-column stripe table-hover " style="width: 100%;" id="PatientAppointmentMedicalPrescriptionTable">
        <tbody id="tableBody">
        </tbody>
    </table>
</div>
<div class="form-group row">
    <label for="TextAreaAdditionalRemarks" class="col-sm-2 col-form-label">Additional Remarks<span style="font-size:10px">(Additional)</span></label>
    <div class="col-sm-6">
        <textarea cols="30" rows="4" class="form-control" id="TextAreaAdditionalRemarks"></textarea>
    </div>
</div>
<div class="form-group row">
    <label for="TextAreaAdditionalRemarks" class="col-sm-2 col-form-label">Appointment Status<span style="font-size:10px">(Required)</span></label>
    <div class="col-sm-4">
        <select class="select2 form-control" id="DropDownAppointmentStatus" data-placeholder="Select a Doctor" style="width: 100%;">
            <option value="NotAttended">Appointment Pending</option>
            <option value="Attended" selected>Appointment Attended </option>
        </select>
    </div>
</div>

<div class="jumbotron alert alert-danger" id="DivGenerateMedicalPrescription" style="display:none">
    <input type="Button" id="GenerateMedicalPrescription" class="form-control col-md-2 btn btn-primary fa-floppy-o" style="border-radius:20px" value="Generate Prescription" />
</div>

<input type="text" id="HiddenFieldPatientCode" value="@ViewBag.P_Code" hidden />
<input type="text" id="HiddenFieldAppointmentCode" value="@ViewBag.PA_AppointmentCode" hidden />

<script src="~/Areas/PatientModuleArea/JsScripts/Patients/CreateMedicalPrescriptByAppointmentId.js"></script>
<script src="~/AngularFrameWork/AngularJS.js"></script>

