
@{
    ViewBag.Title = "Schedule Inter-View";
    Layout = "~/Views/Shared/_LayOut.cshtml";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="col-md-12 col-sm-6 m-b-10" style="margin-top:8px">
                    <div class="form-row alert alert-success" style="border:inset;">
                        <h6 class="col-md-12" style="font-size:20px;font-weight:bolder">Announcment Details</h6>
                        <div class="col-md-6" style="text-align:left">
                            <span class="AdvertismentCodeLabel">Advertisment Code :</span>
                            <span class="AdvertismentCode"> @ViewBag.AdvertismentCode</span>
                        </div>
                        <div class="col-md-6" style="text-align:right">
                            <span class="ApplicantCodeLabel">Applicant Code:</span>
                            <span class="ApplicantCode">@ViewBag.ApplicantCode</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group row">
            @Html.Label("InterView Date", new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBox("TextBoxInterViewDate", null, new { @class = "form-control datetimepicker", placeholder = "Please Enter InterView Date Here!" })
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group row">
            @Html.Label("InterView Time", new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBox("TextBoxInterViewTime", null, new { @class = "form-control datetimepicker3", placeholder = "Please Enter InterView Time Here!" })
            </div>
        </div>
    </div>




    <div class="m-t-20 text-center btn btn-primary">
        <i class="fa fa-save btn"></i><span>
            <input type="button" class="btn btn-primary" id="SubmitDown" value="Save" />
        </span>
    </div>
}
<input type="text" id="HiddenFieldAdvertismentCode" value="@ViewBag.AdvertismentCode" hidden />
<input type="text" id="HiddenFieldApplicantCode" value="@ViewBag.ApplicantCode" hidden />
<script src="~/Areas/HiringAndRecruitmentModule/JsScript/ScheduleInterView.js"></script>
