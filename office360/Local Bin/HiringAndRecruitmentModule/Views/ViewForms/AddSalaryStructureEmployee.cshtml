@{
    ViewBag.Title = "Add Salary Structure";
    Layout = "~/Views/Shared/_LayOut.cshtml";
}



@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="col-md-12 col-sm-6 m-b-10" style="margin-top:8px">
                    <div class="form-row alert alert-success" style="border:inset;">
                        <h6 class="col-md-12" style="font-size:20px;font-weight:bolder">Employee Details</h6>

                        <div class="col-md-6" style="text-align:left">
                            <span class="EmployeeCodeLabel">Employee Code:</span>
                            <span class="EmployeeCode"> @ViewBag.EmployeeCode</span>
                        </div>
                        <div class="col-md-6" style="text-align:right">
                            <span class="EmployeeNameLabel">Employee Name:</span>
                            <span class="EmployeeName"></span>
                        </div>
                        <div class="col-md-6" style="text-align:left">
                            <span class="EmployeeDesignationLabel">Employee Designation:</span>
                            <span class="EmployeeDesignation"></span>
                        </div>
                    </div>
                </div>



            </div>
            <form>
                <div class="col-sm-6">
                    <div class="form-group row">
                        @Html.Label("Basic Salary", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBox("TextBoxBasicSalary", null, new { @class = "form-control", placeholder = "Please Enter Basic Salary Here!" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        @Html.Label("Effective Date", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBox("TextBoxEffectiveFrom", null, new { @class = "form-control datetimepicker", placeholder = "Please Enter Effective Date  Here!" })
                        </div>
                    </div>
                </div>
                @*<div class="col-sm-6">
                    <div class="form-group row">
                        @Html.Label("Expiry Date", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBox("TextBoxExpiryDate", null, new { @class = "form-control datetimepicker", placeholder = "Please Enter Expiry Date  Here!" })
                        </div>
                    </div>
                </div>*@
            </form>

        </div>
    </div>
}
<div class="m-t-20 text-center btn btn-primary">
    <i class="fa fa-save btn"></i><span>
        <input type="button" class="btn btn-primary" id="SubmitDown" value="Save" />
    </span>
</div>



<input type="text" id="HiddenFieldEmployeeCode" value="@ViewBag.EmployeeCode" hidden />


<script src="~/Areas/CRMModuleAEO/JsScript/AddSalaryStructureEmployee.js"></script>
@*<script src="~/AngularFrameWork/AngularJS.js"></script>*@